<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textSize="27sp"
        android:textColor="@color/gray_black"
        android:fontFamily="@font/semi_bold"
        app:layout_constraintTop_toTopOf="@+id/back"
        app:layout_constraintStart_toEndOf="@+id/back"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/back"
        android:layout_marginTop="10dp"
        android:background="@color/gray_dark"/>
    <View
        android:id="@+id/overlapLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="@+id/line"
        android:layout_marginTop="90dp"
        android:background="@color/gray_light"/>
    <ImageView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile"
        app:layout_constraintTop_toTopOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/nickname"
        android:textSize="20sp"
        android:textColor="@color/gray_black"
        android:fontFamily="@font/semi_bold"
        app:layout_constraintTop_toTopOf="@+id/line"
        app:layout_constraintStart_toEndOf="@+id/profile"
        android:layout_marginTop="55dp"
        android:layout_marginStart="15dp"/>
    <ImageView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/account"
        app:layout_constraintTop_toBottomOf="@+id/overlapLine"
        app:layout_constraintStart_toStartOf="@+id/profile"
        android:layout_marginTop="40dp"
        android:layout_marginStart="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profileEdit"
        android:textSize="18sp"
        android:textColor="@color/gray_black"
        android:fontFamily="@font/semi_bold"
        app:layout_constraintTop_toTopOf="@+id/account"
        app:layout_constraintStart_toEndOf="@+id/account"
        android:layout_marginTop="7dp"
        android:layout_marginStart="15dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/forward"
        app:layout_constraintTop_toTopOf="@+id/account"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"/>
    <View
        android:id="@+id/profileEditLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_light"
        app:layout_constraintTop_toBottomOf="@+id/account"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <ImageView
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/info"
        app:layout_constraintTop_toBottomOf="@+id/profileEditLine"
        app:layout_constraintStart_toStartOf="@+id/profile"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help"
        android:textSize="18sp"
        android:textColor="@color/gray_black"
        android:fontFamily="@font/semi_bold"
        app:layout_constraintTop_toTopOf="@+id/help"
        app:layout_constraintStart_toEndOf="@+id/help"
        android:layout_marginTop="7dp"
        android:layout_marginStart="15dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/forward"
        app:layout_constraintTop_toTopOf="@+id/help"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_light"
        app:layout_constraintTop_toBottomOf="@+id/help"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>