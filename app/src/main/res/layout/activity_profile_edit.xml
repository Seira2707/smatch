<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileEdit">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profileEdit"
        android:textSize="27sp"
        android:textColor="@color/gray_black"
        android:fontFamily="@font/semi_bold"
        app:layout_constraintTop_toTopOf="@+id/back"
        app:layout_constraintStart_toEndOf="@+id/back"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/check"
        app:layout_constraintTop_toTopOf="@+id/back"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/back"
        android:layout_marginTop="10dp"
        android:background="@color/gray_dark"/>
    <ImageView
        android:id="@+id/profile"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/profilebig"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/reroll"
        app:layout_constraintBottom_toBottomOf="@+id/profile"
        app:layout_constraintEnd_toEndOf="@+id/profile"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="-5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11/10"
        android:textSize="15sp"
        android:textColor="@color/gray_black"
        android:fontFamily="@font/semi_bold"
        app:layout_constraintBottom_toTopOf="@+id/nicknameInput"
        app:layout_constraintStart_toStartOf="@+id/nicknameInput"
        android:layout_marginStart="5dp"/>
    <EditText
        android:id="@+id/nicknameInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/profile"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/gray_black"
        android:hint="@string/nickname"
        android:textColorHint="@color/gray_dark"
        android:textSize="22sp"
        android:fontFamily="@font/semi_bold"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:paddingLeft="13dp"
        android:paddingTop="5dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rerollsmall"
        app:layout_constraintBottom_toBottomOf="@+id/nicknameInput"
        app:layout_constraintEnd_toEndOf="@+id/nicknameInput"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="-5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>